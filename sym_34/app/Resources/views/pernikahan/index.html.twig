{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('pernikahan_new') }}" class="btn btn-block btn-primary btn-sm" role="button" style="margin-bottom:10px;">
        Tambah Pernikahan
    </a>
    <table class="table table-striped table-dark table-bordered table-hover table-sm">
        <thead>
            <tr>
                <td align="center">#</td>
                <td align="center">Pernikahan</td>
                <td align="center">Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for pernikahan in pernikahans %}
            <tr>
                <td align="center">
                    <a href="#">{{ loop.index }}</a></td>
                <td>&nbsp;&nbsp;{{ pernikahan.namaPernikahan }}</td>
                <td align="center">
                    <a href="{{ path('pernikahan_edit', { 'id': pernikahan.id }) }}" class="btn btn-primary btn-sm" aria-label="Settings">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('pernikahan_show', { 'id': pernikahan.id }) }}" class="btn btn-success btn-sm" aria-label="Settings">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
