{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('kelamin_new') }}" class="btn btn-outline-primary btn-block btn-sm" role="button" style="margin-bottom:10px;">
        Tambah Kelamin
    </a>
    <table class="table table-striped table-dark table-bordered  table-sm">
        <thead>
            <tr>
                <td align="center">#</td>
                <td align="center">Kelamin</td>
                <td align="center">Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for kelamin in kelamins %}
            <tr>
                <td align="center"><a href="#">{{ loop.index }}</a></td>
                <td>&nbsp;&nbsp;{{ kelamin.namaKelamin }}</td>
                <td align="center">
                    <a href="{{ path('kelamin_edit', { 'id': kelamin.id }) }}" class="btn btn-primary btn-sm" aria-label="Settings">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('kelamin_show', { 'id': kelamin.id }) }}" class="btn btn-success btn-sm" aria-label="Settings">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
