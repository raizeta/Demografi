{% extends 'base.html.twig' %}

{% block body %}
<div class="row justify-content-md-center" style="margin-top:10px;">
    <div class="col-6">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success" role="alert" style="top:10px;">
              {{ message }}
            </div>
        {% endfor %}
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button type="submit" class="btn btn-md btn-block" style="margin-top:10px;">
                Save
            </button>
        {{ form_end(edit_form) }}
        <a href="{{ path('regionalpropinsi_index') }}" role="button" class="btn btn-md btn-success btn-block" style="margin-top:10px;">
            Back to the list
        </a>
    </div>
</div>
{% endblock %}
