{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('regionalpropinsi_new') }}" class="btn btn-outline-secondary btn-sm" role="button" style="margin-bottom:10px;">
        Tambah Propinsi
    </a>
    <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#exampleModalLong"  style="margin-bottom:10px;">
      Modal Tambah Propinsi
    </button>
    <table class="table table-striped table-dark table-bordered table-hover table-sm" id="tabledata">
        <thead>
            <tr>
                <td align="center">#</td>
                <td align="center">Propinsi</td>
                <td align="center">Jlh Kab</td>
                <td align="center">Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for regionalPropinsi in regionalPropinsis %}
            
            <tr>
                <td align="center">
                    <a href="#">
                        {{ loop.index }}
                    </a>
                </td>
                <td data-toggle="collapse" href="#collapseExample{{loop.index}}" style="cursor:pointer">
                    &nbsp;&nbsp;{{ regionalPropinsi.namapropinsi }}
                </td>
                <td align="center">
                    &nbsp;&nbsp;{{ regionalPropinsi.kabupatens|length }}
                </td>
                <td align="center">
                    <a href="{{ path('regionalpropinsi_edit', { 'id': regionalPropinsi.id }) }}" class="btn btn-primary btn-sm" aria-label="Settings">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('regionalpropinsi_show', { 'id': regionalPropinsi.id }) }}" class="btn btn-success btn-sm" aria-label="Settings">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            <tr class="collapse" id="collapseExample{{loop.index}}">
                
                <td colspan="4" style="margin-left:50px;">
                    <div style="padding:5px;">
                    <table style="width:100%;">
                        <thead>
                        <tr>
                            <td align="center">#</td>
                            <td align="center">Kabupaten</td>
                            <td align="center">Kab/Kota</td>
                            <td align="center">Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                     {% for regionalKabupaten in regionalPropinsi.kabupatens %}
                        <tr>
                            <td align="center">
                                <a href="#">
                                    {{ loop.index }}
                                </a>
                            </td>
                            <td style="max-width:15vw;">
                                &nbsp;&nbsp;{{ regionalKabupaten.namaKabupaten }}
                            </td>
                            <td>&nbsp;&nbsp;{{ regionalKabupaten.typeKabupaten }}</td>
                            <td align="center">
                                <a href="{{ path('regionalkabupaten_edit', { 'id': regionalKabupaten.id }) }}" class="btn btn-outline-success btn-sm" role="button">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                    </div>
                </td>
            
             
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row align-items-center justify-content-center">
        <div class="navigation">{{ knp_pagination_render(regionalPropinsis) }}</div>
    </div>



    <!-- Modal -->
    
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Tambah Propinsi</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            <form class="tagForm" id="tag-form" action="" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <label for="tagName">Nama Propinsi</label>
                    <input id="tagName" name="namapropinsi" class="form-control" type="text"/>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input id="tag-form-submit" type="submit" class="btn btn-primary" value="Save">
                </div>
            </form>
        </div>
      </div>
    </div>
    {# Modal #}
{% endblock %}

{% block javascripts %}
{{parent()}}
<script>
    $('#exampleModalLong').on('shown.bs.modal', function () 
    {
      $('#tag-form').trigger('reset');
    });
    $('#tag-form-submit').on('click', function(e) 
    {
        e.preventDefault();
        $.ajax({
            type: "POST",
            url: "{{path('regionalpropinsi_new')}}",
            data: $('form.tagForm').serialize(),
            success: function(response) 
            {
                $("#tabledata tr:first").after(response.data);
            },
            error: function() 
            {
                console.log("Error");
            },
            complete:function()
            {
                $('#exampleModalLong').modal('toggle');  
            }
        });
        return false;
    });
</script>
{% endblock %}
