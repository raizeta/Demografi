{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-md-center" style="margin-top:10px;">
        <div class="col-6">
            {% if (regionalKabupatens|length > 0) %}
            <a  class="btn btn-outline-secondary btn-block btn-sm" role="button" style="margin-bottom:10px;">
                Propinsi {{ regionalKabupatens[0].namapropinsi}}
            </a>
            <table class="table table-striped table-dark table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th style="text-align:center;" scope="col">Id</th>
                        <th scope="col">Namakabupaten</th>
                        <th scope="col">Kab/Kota</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for regionalKabupaten in regionalKabupatens[0].kabupatens %}
                    <tr scope="row">
                        <td align="center">
                            <a href="">
                                {{ loop.index }}
                            </a>
                        </td>
                        <td style="max-width:15vw;">&nbsp;&nbsp;{{ regionalKabupaten.namaKabupaten }}</td>
                        <td>&nbsp;&nbsp;{{ regionalKabupaten.typeKabupaten }}</td>
                        <td align="center">
                            <a href="{{ path('regionalkabupaten_show', { 'id': regionalKabupaten.id }) }}" class="btn btn-outline-success btn-sm" role="button" style="color:white">Detail</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                <div class="alert alert-success" role="alert" style="top:10px;">
                  Data Kabupaten Masih Kosong
                </div>
            {% endif %}
            <a onclick="window.history.back()" class="btn btn-outline-secondary btn-block btn-sm" role="button" style="margin-bottom:10px;">
                Kembali Ke List
            </a>
        </div>
    </div>
{% endblock %}
