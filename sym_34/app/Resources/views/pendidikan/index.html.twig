{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('pendidikan_new') }}" class="btn btn-block btn-primary btn-sm" role="button" style="margin-bottom:10px;">
        Tambah Pendidikan
    </a>
    <table class="table table-striped table-dark table-bordered table-hover table-sm">
        <thead>
            <tr>
                <td align="center">#</td>
                <td align="center">Pendidikan</td>
                <td align="center">Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for pendidikan in pendidikans %}
            <tr>
                <td td align="center">
                    <a href="{{ path('pendidikan_show', { 'id': pendidikan.id }) }}">
                        {{ pendidikan.id }}
                    </a>
                </td>
                <td>&nbsp;&nbsp;{{ pendidikan.namaPendidikan }}</td>
                <td align="center">
                    <a href="{{ path('pendidikan_edit', { 'id': pendidikan.id }) }}" class="btn btn-primary btn-sm" aria-label="Settings">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('pendidikan_show', { 'id': pendidikan.id }) }}" class="btn btn-success btn-sm" aria-label="Settings">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
